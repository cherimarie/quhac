.row
  .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3.contact
    .row
      .col-xs-12
        %h2 Contact QuHac

        %p Use the form below to reach the QuHac team, or send an email to quhac@gaycity.org

    .row
      .col-xs-12
        =form_tag("/submit_contact", method: "post") do
          %fieldset
            %label{for: "name"} Your Name
            %input{type: "text", name: "name", placeholder:"Name"}

          %fieldset
            %label{for: "email"}
              Your Email Address
              %small if you'd like a reply
            %input{type: "email", name: "email", placeholder:"Email Address"}

          %fieldset.comments
            %label{for: "comments"} Comments
            %input{type: "text", name: "comments", required: "required", placeholder:"Comments"}

          %input{type: "hidden", name: "robots_are_dumb"}

          %fieldset
            %input.base-submit{type: "submit"}
