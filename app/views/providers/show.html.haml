.row
  .col-xs-12
    %h1= @provider.name
    %p.hidden-xs= @provider.street_address
    %p= @provider.city
    %p= @provider.type
    %p= @provider.clinic
    %p= @provider.email

.row
  .col-xs-12.col-sm-8.col-sm-offset-2
    %p This provider accepts the following insurances:
    %ul
      - @provider.insurers.each do |insurer|
        %li= insurer.name

    = link_to "Back", :back

%hr
