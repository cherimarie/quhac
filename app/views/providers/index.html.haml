.row
  .col-xs-12.results-head
    %h1.col-xs-10.col-xs-offset-1 Provider Search Results

.row
  .col-xs-10.col-xs-offset-1
    - @providers.each do |provider|
      .row.card
        .col-xs-2
          = image_tag("QuHac-logo.png")
        .col-xs-10.card-fill
          .row
            .col-xs-12.provider-index-head
              %h2= link_to provider.name, provider_path(provider.id)
              %p.title Massage Therapist
          .row
            .col-xs-12.col-sm-5
              .address
                %p.hidden-xs Address
                %p= provider.city
                %p (206) 555-1212

            .col-xs-12.col-sm-6
              .row
                .col-xs-4
                  %p Medicaid?
                .col-xs-2
                  %p y/n
                .col-xs-2.col-xs-offset-0.col-sm-offset-2
                  %p Molina
              .row
                .col-xs-4
                  %p Medicare?
                .col-xs-2
                  %p y/n
              .row
                .col-xs-12
                  Insurance accepted:
                  %p= provider.insurers.map { |ins| ins.name } .join(", ")



= link_to providers_path do
  %button.clr-search.center-block Clear Search
