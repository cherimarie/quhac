=form_tag('/providers', method: 'get') do

  .row.filter-big-row
    .col-xs-10.col-xs-offset-1
      %h3 Insurance
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset.insurers
            - Insurer.all.each do |ins|
              %label{for: "ins-#{ins.id}"}=ins.name
              %input{type: 'checkbox', id: "ins-#{ins.id}", value: "ins-#{ins.id}", name: "ins-#{ins.id}"}

  .row.filter-big-row
    .col-xs-10.col-xs-offset-1
      %h3 Provider Info
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'accepting'} Accepting New Patients
            %input{type: 'checkbox', value: 'accepting', id: 'accepting', name: 'accepting'}
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'type'} Provider Type
            = select_tag 'type', options_for_select(prov_types), include_blank: true
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'expertise'} Expertise
            = select_tag 'expertise', options_for_select(expertises), include_blank: true
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'specialization'} Specialization
            = select_tag 'specialization', options_for_select(specializations), include_blank: true

  .row.filter-big-row
    .col-xs-10.col-xs-offset-1
      %h3 Provider Identity
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'gender-id'} Gender Identity
            = select_tag 'gender-id', options_for_select(gender_identities), include_blank: true
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'orientation'} Orientation
            = select_tag 'orientation', options_for_select(orientations), include_blank: true

  .row.filter-big-row
    .col-xs-10.col-xs-offset-1
      %h3 Training and Practices
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'pref-name'} Patients' Preferred Name in Charts
            %input{type: 'checkbox', value: 'pref-name', id: 'pref-name', name: 'pref-name'}
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'gend-neut-rr'} Gender Neutral Restrooms
            %input{type: 'checkbox', value: 'gend-neut-rr', id: 'gend-neut-rr', name: 'gend-neut-rr'}
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'comp-intake'} Comprehensive Intake
            %input{type: 'checkbox', value: 'comp-intake', id: 'comp-intake', name: 'comp-intake'}
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'lgbtq-trained'} Staff Fully Trained in LGBTQ Issues
            %input{type: 'checkbox', value: 'lgbtq-trained', id: 'lgbtq-trained', name: 'lgbtq-trained'}
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'cultu-tarined'} Staff Fully Trained in Racial & Cultural Issues
            %input{type: 'checkbox', value: 'cultu-tarined', id: 'cultu-tarined', name: 'cultu-trained'}


  .row.filter-big-row
    .col-xs-10.col-xs-offset-1
      %h3 Sort Results
      .row
        .col-xs-12.col-md-11.col-md-offset-1
          %fieldset
            %label{for: 'sort-by'} Sort Results By
            %select{id: 'sort-by', name: 'sort-by'}
              %option{value: 'name'} Name
              %option{value: 'type'} Type
              %option{value: 'city'} City
              %option{value: 'zip'} Zip Code

  .row.filter-big-row.advanced-search-btn-group
    .col-xs-4.col-xs-offset-4.col-sm-4.col-sm-offset-7.col-md-3.col-md-offset-8
      %fieldset
        %input.grey-button{type:'reset', name: 'reset', value: 'Reset Filters'}
    .col-xs-4.col-xs-offset-4.col-sm-4.col-sm-offset-7.col-md-3.col-md-offset-8
      %fieldset
        %input.base-submit{type: 'submit', name: 'submit-filter', value: 'Filter Providers'}
